# TestForge Environment Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=testforge
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0
LOG_LEVEL=debug

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=10s

# PostgreSQL
DB_HOST=localhost
DB_PORT=5433
DB_USER=testforge
DB_PASSWORD=testforge
DB_NAME=testforge
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Temporal
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=testforge
TEMPORAL_TASK_QUEUE=testforge-tasks
TEMPORAL_WORKER_COUNT=4

# S3/MinIO
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=testforge
S3_REGION=us-east-1
S3_USE_SSL=false

# V-JEPA Service
VJEPA_HOST=localhost
VJEPA_PORT=50051
VJEPA_TIMEOUT=30s

# Claude API (Anthropic)
ANTHROPIC_API_KEY=your-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# Kubernetes (for sandbox execution)
K8S_IN_CLUSTER=false
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=testforge
K8S_SANDBOX_IMAGE=testforge/playwright-sandbox:latest
K8S_SANDBOX_CPU=500m
K8S_SANDBOX_MEMORY=1Gi
K8S_SANDBOX_TIMEOUT=10m
